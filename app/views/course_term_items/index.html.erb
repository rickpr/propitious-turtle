<p id="notice"><%= notice %></p>

<h1>Listing Course Term Items</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Term item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_term_items.each do |course_term_item| %>
      <tr>
        <td><%= course_term_item.course %></td>
        <td><%= course_term_item.term_item %></td>
        <td><%= link_to 'Show', course_term_item %></td>
        <td><%= link_to 'Edit', edit_course_term_item_path(course_term_item) %></td>
        <td><%= link_to 'Destroy', course_term_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

