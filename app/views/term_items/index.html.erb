<p id="notice"><%= notice %></p>

<h1>Listing Term Items</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Description</th>
      <th>Hours</th>
      <th>Minimum grade</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_items.each do |term_item| %>
      <tr>
        <td><%= term_item.term %></td>
        <td><%= term_item.description %></td>
        <td><%= term_item.hours %></td>
        <td><%= term_item.minimum_grade %></td>
        <td><%= term_item.notes %></td>
        <td><%= link_to 'Show', term_item %></td>
        <td><%= link_to 'Edit', edit_term_item_path(term_item) %></td>
        <td><%= link_to 'Destroy', term_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

